{
	"manifest_version": 3,
	"name": "Email To Founder",
	"version": "1.0.0",
	"description": "An extension to send emails to founders easily",
	"action": {
		"default_popup": "src/pages/popup/index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": { "service_worker": "src/background/index.js" },
	"permissions": ["storage", "activeTab", "scripting"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/content/index.js"]
		}
	]
}
